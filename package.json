{
  "name": "val-i18n",
  "version": "0.1.11",
  "private": false,
  "description": "Reactive i18n with value-enhancer.",
  "license": "MIT",
  "author": "CRIMX <straybugs@gmail.com> (https://github.com/crimx/)",
  "repository": "crimx/val-i18n",
  "keywords": [
    "internationalization",
    "i18n",
    "translation",
    "localization",
    "l10n",
    "globalization",
    "gettext"
  ],
  "sideEffects": false,
  "main": "./dist/main.js",
  "module": "./dist/main.mjs",
  "types": "./dist/main.d.ts",
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "prepublishOnly": "pnpm run build",
    "lint": "eslint --ext .ts,.tsx . && prettier --check .",
    "test": "vitest",
    "test:coverage": "tsc --noEmit && vitest run --coverage --coverage.include=src/**",
    "docs": "typedoc --options typedoc.json",
    "build": "cross-env NODE_ENV=production tsup-node src/main.ts",
    "build:min": "cross-env NODE_ENV=production MINIFY=true tsup-node src/main.ts && node scripts/gzip.mjs",
    "build:dev": "cross-env NODE_ENV=development tsup-node src/main.ts",
    "release": "standard-version"
  },
  "peerDependencies": {
    "value-enhancer": ">= 2 <=5"
  },
  "devDependencies": {
    "@types/node": "^18.8.5",
    "@typescript-eslint/eslint-plugin": "^8.2.0",
    "@typescript-eslint/parser": "^8.2.0",
    "@vitest/coverage-v8": "^1.5.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^8.10.0",
    "gzip-size": "^7.0.0",
    "prettier": "^2.4.0",
    "pretty-bytes": "^6.0.0",
    "standard-version": "^9.3.1",
    "tsup": "^8.2.4",
    "typedoc": "^0.26.6",
    "typescript": "^5.5.4",
    "value-enhancer": "^5.0.0",
    "vitest": "^1.5.0",
    "yoctocolors": "^1.0.0"
  },
  "packageManager": "pnpm@9.7.0"
}
